<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/detail_tab_split" >

    <Button
        android:id="@+id/xiaoxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_find1" />

    <EditText
        android:id="@+id/searchbyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/a22_sao"
        android:layout_toRightOf="@+id/xiaoxi"
        android:text="请输入搜索关键字"
        android:textColor="#cdcdcd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/a22_sao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_find2" />

</RelativeLayout>